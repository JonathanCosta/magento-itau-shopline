<config>
    <modules>
        <Cepheros_ItauShopline>
            <version>1.0.0</version>          
        </Cepheros__ItauShopline>
    </modules>
    <global>
        <models>
            <itaushopline>
                <class>Cepheros_ItauShopline_Model</class>
                <resourceModel>itaushopline_mysql4</resourceModel>
            </itaushopline>
            <itaushopline_mysql4>
                <class>Cepheros_ItauShopline_Model_Mysql4</class>
                <entities>
                    <api_debug><table>itaushopline_api_debug</table></api_debug>
                    <transaction><table>itaushopline</table></transaction>
                </entities>
            </itaushopline_mysql4>
        </models>
		<helpers>
			<itaushopline>
				<class>Cepheros_ItauShopline_Helper</class>
			</itaushopline>
		</helpers>
		 <resources>
            <itaushopline_setup>
                <setup>
                    <module>Cepheros_ItauShopline</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </itaushopline_setup>
            <itaushopline_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </itaushopline_write>
            <itaushopline_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </itaushopline_read>
        </resources>
        <blocks>
            <itaushopline>
                <class>Cepheros_ItauShopline_Block</class>
            </itaushopline>
        </blocks>
    </global>
    <frontend>      
        <routers>
            <itaushopline>
                <use>standard</use>
                <args>
                    <module>Cepheros_ItauShopline</module>
                    <frontName>itaushopline</frontName>
                </args>
            </itaushopline>
        </routers>
        <translate>
            <modules>
                <Cepheros__ItauShopline>
                    <files>
                        <default>Cepheros_ItauShopline.csv</default>
                    </files>
                </Cepheros__ItauShopline>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Cepheros__ItauShopline>
                    <files>
                        <default>Cepheros_ItauShopline.csv</default>
                    </files>
                </Cepheros__ItauShopline>
            </modules>
        </translate>        
    </adminhtml>

    <default>
         <payment>
             <itaushopline_standard>
                  <model>itaushopline/standard</model>
                  <title>Ita√∫ Shopline</title>
                  <allowspecific>1</allowspecific>                  
            </itaushopline_standard>
        </payment>
    </default>
</config>
